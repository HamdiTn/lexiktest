{% extends 'base.html.twig' %}
{% block body %}

    <div class="" style="margin-bottom: 30px;margin-top: 100px" >
        <h1>Création nouvel groupe</h1>
    </div>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group col-sm-8">
        <p><label for="contactname">Nom d'utilisateur<span>*</span></label>
            {{ form_widget(form.name, {'attr': {'class': 'form-control','required':'required'}}) }}
            {{ form_errors(form.name) }}
        </p>
    </div>
    <div class="form-group col-sm-5">
        <p>
            <input type="submit" value="Crée le groupe"  class="form-control btn btn-primary"/>
        </p>
    </div>
    {{ form_end(form) }}

{% endblock %}
