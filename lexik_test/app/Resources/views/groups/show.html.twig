{% extends 'base.html.twig' %}
{% block body %}

    <h1>Group</h1>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <div class="form-group">
                <h4 class="" style="color: #ac2925">Nom du groupe: </h4>
                <p class="lead">
                    {{ group.name }}
                </p>
            </div>
            <div class="form-group">
                <a href="{{ path('groups_edit', { 'id': group.id }) }}" class="btn btn-warning" style="float: left;margin-right: 10px"> Modifier</a>
                {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>

{% endblock %}
