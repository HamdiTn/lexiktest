{% extends 'base.html.twig' %}
{% block body %}

    <h1>Modifier l'utilisateur</h1>

    {{ form_start(edit_form) }}
    <div class="form-group col-sm-8">
        <p><label for="contactname">Nom d'utilisateur<span>*</span></label>
            {{ form_widget(edit_form.name, {'attr': {'class': 'form-control','required':'required'}}) }}
            {{ form_errors(edit_form.name) }}
        </p>
    </div>
    <div class="form-group col-sm-8">
        <p><label for="contactname">Pr√©nom d'utilisateur<span>*</span></label>
            {{ form_widget(edit_form.lastname, {'attr': {'class': 'form-control','required':'required'}}) }}
            {{ form_errors(edit_form.lastname) }}
        </p>
    </div>
    <div class="form-group col-sm-8">
        <p><label for="contactname">Date de naissance<span>*</span></label>
            {{ form_widget(edit_form.birthday, {'attr': {'class': '','required':'required'}}) }}
            {{ form_errors(edit_form.birthday) }}
        </p>
    </div>
    <div class="form-group col-sm-8">
        <p><label for="contactname">Adresse e-mail<span>*</span></label>
            {{ form_widget(edit_form.email, {'attr': {'class': 'form-control','required':'required','type':'email'}}) }}
            {{ form_errors(edit_form.email) }}
        </p>
    </div>
    <div class="form-group col-sm-8">
        <p><label for="contactname">Groupe de l'utilisateur<span>*</span></label>
            {{ form_widget(edit_form.groups, {'attr': {'class': 'form-control','required':'required'}}) }}
            {{ form_errors(edit_form.groups) }}
        </p>
    </div>
    <div class="form-group col-sm-5">
             <input type="submit" value="Modifier" class="btn btn-warning" style="float: left;margin-right: 10px" />
     </div>
    {{ form_end(edit_form) }}

{% endblock %}
